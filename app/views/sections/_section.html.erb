<% obj.each do |section| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to section.name, section_path(section) %>
        </div>
        <div class="article-body">
          <%= truncate(section.description, length: 100) %>
          <div class="article-meta-details">
            <small>Created <%= time_ago_in_words(section.created_at) %> ago,
              last updated <%= time_ago_in_words(section.updated_at) %> ago</small>
          </div>
        </div>
        <% if (logged_in? && current_user.admin?) %>
          <div class="article-actions">
            <%= link_to "Show ", section_path(section), class: "btn btn-xs btn-primary" %>
            <%= link_to "Edit ", edit_section_path(section), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete ", section_path(section), method: :delete,
                        data: { confirm: "Are you sure you want to delete the subsection?"}, class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

