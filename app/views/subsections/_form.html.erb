<%= render 'shared/errors', obj: @subsection %>
<div class="row">
  <div class="col-xs-12">
    <%#= form_with(model: subsection, local: true) do |form| %>
    <%= form_for(@subsection, :html => {class: "form-horizontal", role: "form"}) do |form| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :shortname %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :shortname, class: "form-control", placeholder: "Shortname", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :link %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :link, class: "form-control", placeholder: "Link", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :description, class: "form-control", placeholder: "Desription", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :position %>
        </div>
        <div class="col-sm-8">
          <%= form.number_field :position, class: "form-control",  autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :status %>
        </div>
        <div class="col-sm-8">
          <%= form.number_field :status, class: "form-control",  autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to 'Show', @subsection %> |
          <%= link_to 'Back to the list', subsections_path %>
        </div>
      </div>

    <% end %>

  </div>
</div>