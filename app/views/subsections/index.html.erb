<h1>Subsections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Shortname</th>
      <th>Link</th>
      <th>Description</th>
      <th>Position</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subsections.each do |subsection| %>
      <tr>
        <td><%= subsection.name %></td>
        <td><%= subsection.shortname %></td>
        <td><%= subsection.link %></td>
        <td><%= subsection.description %></td>
        <td><%= subsection.position %></td>
        <td><%= subsection.status %></td>
        <td><%= link_to 'Show', subsection %></td>
        <td><%= link_to 'Edit', edit_subsection_path(subsection) %></td>
        <td><%= link_to 'Destroy', subsection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

