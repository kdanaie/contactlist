<h1 align="center">Show Department</h1>

<div class="well col-xs-8 col-xs-offset-2">
  <p><strong>Name: <%= @department.name %></strong></p>
  <hr>
  <p>Shortname: <%= @department.shortname %></p>
  <p>Description: <%= @department.description %></p>
  <p>Position: <%= @department.position %></p>
  <p>Status: <%= @department.status %></p>

  <div class="article-actions">
      <%= link_to "Edit ", edit_department_path(@department), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete ", department_path(@department), method: :delete, data: { confirm: "Are you sure you want to delete the department?"}, class: "btn btn-xs btn-danger" %>

  </div>
</div>


